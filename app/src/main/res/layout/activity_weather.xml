<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utilise.myapplication.WeatherActivity"
    android:background="#448AFF">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:text="OliverWeather"
        android:textColor="@android:color/white"
        android:textSize="40dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:id="@+id/add_ville"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter une ville (Capital)"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:id="@+id/validation"
        android:layout_below="@+id/add_ville">
    </Button>

    <ListView
        android:id="@+id/list_ville"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/validation">
    </ListView>

</RelativeLayout>
